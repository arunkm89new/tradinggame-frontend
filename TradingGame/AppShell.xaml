<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TradingGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TradingGame"
    Title="TradingGame">

    <TabBar>
        <ShellContent
            Title="Learn"
            Icon="book_icon.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Trade"
            Icon="candlestick_icon.png"
            ContentTemplate="{DataTemplate local:TradePage}"
            Route="TradePage" />
        <ShellContent
            Title="Profile"
            Icon="account_icon.png"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="ProfilePage" />
    </TabBar>

</Shell>
